@model CommonSolution.DTOs.FinalClientDto

@{
    ViewData["Title"] = "Nuevo Cliente";
}

<div class="content-wrapper" >
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Nuevo Cliente</h1>
                    <hr />
                    <h4 class="m-0 text-dark">Cliente Final</h4>
                </div>
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <div class="content" style="margin-left:25px">
        <div class="row">
            <div class="col-md-4">
                @*<div class="col-md-10">
                    @Html.RadioButtonFor(model => model.BillingType, "Empresa", new { id = "radioEM" }) Empresa
                    @Html.RadioButtonFor(model => model.BillingType, "ClienteFinal", new { id = "radioCF" }) Cliente Final
                </div>*@
                <div id="CF" style="display: block;">
                        <form asp-action="AddFinalClient" asp-controller="Client" method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group">
                                <label asp-for="DocumentNumber" class="control-label"></label>
                                <input asp-for="DocumentNumber" class="form-control" />
                                <span asp-validation-for="DocumentNumber" class="text-danger"></span>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label asp-for="Name" class="control-label"></label>
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-6">
                                    <label asp-for="LastName" class="control-label"></label>
                                    <input asp-for="LastName" class="form-control" />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.DropDownListFor(model => model.BillingType, (List<SelectListItem>)ViewBag.colClientTypeSelect, "-- Grupo de cliente --", new { @class = "form-control", id = "selectValue" })
                                <span asp-validation-for="BillingType" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="PhoneNumber" class="control-label"></label>
                                <input asp-for="PhoneNumber" class="form-control" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Address" class="control-label"></label>
                                <textarea asp-for="Address" class="form-control"></textarea>
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="EMail" class="control-label"></label>
                                <input asp-for="EMail" class="form-control" />
                                <span asp-validation-for="EMail" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Ingresar" class="btn btn-primary float-right" />
                            </div>
                        </form>
                </div>
                <div id="EM" style="display: none;">
                    <h1>empresa</h1>
                </div>
            </div>
        </div>
    </div>
</div>
        <script>
            document.getElementById("radioCF").checked = true;
            var radiobut = document.getElementById("radioEM");
            radiobut.addEventListener("click", setDiv);
            var radiobut = document.getElementById("radioCF");
            radiobut.addEventListener("click", setDiv);

            function setDiv() {
                if (document.getElementById("CF").style.display == "none") {
                    document.getElementById("CF").style.display = "block";
                    document.getElementById("EM").style.display = "none";
                }
                else {
                    document.getElementById("CF").style.display = "none";
                    document.getElementById("EM").style.display = "block";
                }
            }
        </script>
        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
