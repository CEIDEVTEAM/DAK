@model CommonSolution.DTOs.PackageDto


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
<link rel="stylesheet" href="~/adminlte/plugins/fontawesome-free/css/all.min.css">
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h4 class="m-0 text-dark">Procesamiento de Pago</h4>
                </div>
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <div class="content" style="margin-left:25px">
       
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Efectivo</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="menu1-tab" data-toggle="tab" href="#menu1" role="tab" aria-controls="credito" aria-selected="true">Crédito</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="menu2-tab" data-toggle="tab" href="#menu2" role="tab" aria-controls="debito" aria-selected="true">Debito</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="menu3-tab" data-toggle="tab" href="#menu3" role="tab" aria-controls="mercado" aria-selected="true">Mercado Pago</a>
            </li>

        </ul>

            <div class="tab-content">
                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                    <div class="col-3">
                        <br />
                        <h4 class="m-0 text-dark">Efectivo</h4>
                        <hr />
                        <form asp-action="ProcessPayment">
                            <input type="hidden" asp-for="PaymentMethod" value="Cash" />
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label class="control-label">Procesamiento del Paquete nro:</label>
                                <input asp-for="Id" class="form-control" readonly />

                            </div>

                            <div class="form-group">
                                <label class="control-label">Total a cobrar</label>
                                <input asp-for="Price" class="form-control" readonly />

                            </div>
                            <div class="form-group">
                                <input type="submit" value="Cobrar" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>

                </div>
                <div class="tab-pane fade" id="menu1" role="tabpanel" aria-labelledby="menu1-tab">
                    <div class="col-3">
                        <br />
                        <h4 class="m-0 text-dark">Crédito</h4>
                        <hr />
                        <form asp-action="ProcessPayment">
                            <input type="hidden" asp-for="PaymentMethod" value="Credit" />
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label class="control-label">Procesamiento del Paquete nro:</label>
                                <input asp-for="Id" class="form-control" readonly />

                            </div>
                            <div class="form-group">
                                <label class="control-label">Total a cobrar</label>
                                <input asp-for="Price" class="form-control" readonly />

                            </div>
                            <div class="form-group">
                                <input type="submit" value="Cobrar" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
                <div class="tab-pane fade" id="menu2" role="tabpanel" aria-labelledby="menu2-tab">
                    <div class="col-3">
                        <br />
                        <h4 class="m-0 text-dark">Débito</h4>
                        <hr />
                        <form asp-action="ProcessPayment">
                            <input type="hidden" asp-for="PaymentMethod" value="Debit" />
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label class="control-label">Procesamiento del Paquete nro:</label>
                                <input asp-for="Id" class="form-control" readonly />

                            </div>
                            <div class="form-group">
                                <label class="control-label">Total a cobrar</label>
                                <input asp-for="Price" class="form-control" readonly />

                            </div>
                            <div class="form-group">
                                <input type="submit" value="Cobrar" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
                <div class="tab-pane fade" id="menu3" role="tabpanel" aria-labelledby="menu3-tab">
                    <div class="col-3">
                        <br />
                        <h4 class="m-0 text-dark">Mercado Pago</h4>
                        <hr />
                        <form asp-action="ProcessPayment">
                            <input type="hidden" asp-for="PaymentMethod" value="MercadoPago" />
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label class="control-label">Procesamiento del Paquete nro:</label>
                                <input asp-for="Id" class="form-control" readonly />

                            </div>
                            <div class="form-group">
                                <label class="control-label">Total a cobrar</label>
                                <input asp-for="Price" class="form-control" readonly />

                            </div>
                            <div class="form-group">
                                <input type="submit" value="Cobrar" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
</div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}